generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// =============================================
// MODELOS DE AUTENTICACION (NextAuth v5)
// =============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  globalRole    GlobalRole @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  ordersCreated ServiceOrder[] @relation("CreatedByUser")
  tenantUsers   TenantUser[]
  invitationsSent Invitation[] @relation("InvitedByUser")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =============================================
// ENUMS
// =============================================

enum GlobalRole {
  USER
  SUPER_ADMIN
}

enum TenantRole {
  OWNER
  ADMIN
  EMPLOYEE
}

enum PlanInterval {
  MONTHLY
  YEARLY
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  PSE
  CREDIT_CARD
  CASH
}

enum PaymentStatus {
  PENDING
  APPROVED
  DECLINED
  EXPIRED
  ERROR
}

enum PlanChangeStatus {
  SCHEDULED
  APPLIED
  CANCELLED
}

enum ReminderType {
  EXPIRING_7_DAYS
  EXPIRING_3_DAYS
  EXPIRING_1_DAY
  EXPIRED
}

enum VehicleType {
  SEDAN
  SUV
  TRUCK
  MOTORCYCLE
  VAN
  OTHER
}

// =============================================
// MULTI-TENANT MODELS
// =============================================

model Plan {
  id            String       @id @default(cuid())
  name          String       @db.VarChar(100)
  slug          String       @unique @db.VarChar(50)
  description   String?      @db.Text
  price         Decimal      @db.Decimal(10, 2)
  interval      PlanInterval @default(MONTHLY)
  maxUsers      Int          @default(5)
  maxOrdersPerMonth Int      @default(500)
  stripePriceId String?      @db.VarChar(255)
  features      Json         @default("[]")
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  tenants            Tenant[]
  invoices           Invoice[]
  scheduledFromPlan  ScheduledPlanChange[] @relation("FromPlan")
  scheduledToPlan    ScheduledPlanChange[] @relation("ToPlan")

  @@map("plans")
}

model Tenant {
  id                    String   @id @default(cuid())
  name                  String   @db.VarChar(200)
  slug                  String   @unique @db.VarChar(100)
  domain                String?  @unique @db.VarChar(255)
  logoUrl               String?  @db.Text
  phone                 String?  @db.VarChar(20)
  email                 String?  @db.VarChar(255)
  address               String?  @db.Text
  stripeCustomerId      String?  @db.VarChar(255)
  stripeSubscriptionId  String?  @db.VarChar(255)
  planId                String?
  trialEndsAt           DateTime?
  isActive              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  plan                 Plan?                @relation(fields: [planId], references: [id])
  tenantUsers          TenantUser[]
  invitations          Invitation[]
  clients              Client[]
  vehicles             Vehicle[]
  serviceTypes         ServiceType[]
  serviceOrders        ServiceOrder[]
  invoices             Invoice[]
  payments             Payment[]
  scheduledPlanChanges ScheduledPlanChange[]
  paymentReminders     PaymentReminder[]

  @@index([slug])
  @@index([planId])
  @@map("tenants")
}

model TenantUser {
  id        String     @id @default(cuid())
  userId    String
  tenantId  String
  role      TenantRole @default(EMPLOYEE)
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, tenantId])
  @@index([tenantId])
  @@map("tenant_users")
}

model Invitation {
  id          String      @id @default(cuid())
  email       String      @db.VarChar(255)
  tenantId    String
  role        TenantRole  @default(EMPLOYEE)
  token       String      @unique
  expiresAt   DateTime
  acceptedAt  DateTime?
  invitedById String
  createdAt   DateTime    @default(now())

  tenant    Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  invitedBy User   @relation("InvitedByUser", fields: [invitedById], references: [id])

  @@index([token])
  @@index([tenantId])
  @@index([invitedById])
  @@map("invitations")
}

// =============================================
// MODELOS DE NEGOCIO
// =============================================

model Client {
  id        String   @id @default(cuid())
  firstName String   @db.VarChar(100)
  lastName  String   @db.VarChar(100)
  email     String?  @db.VarChar(255)
  phone     String   @db.VarChar(20)
  address   String?  @db.Text
  notes     String?  @db.Text
  isFrequent Boolean @default(false)
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant   Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  vehicles Vehicle[]
  orders   ServiceOrder[]

  @@unique([tenantId, email])
  @@index([tenantId])
  @@index([lastName, firstName])
  @@index([phone])
  @@map("clients")
}

model Vehicle {
  id          String      @id @default(cuid())
  plate       String      @db.VarChar(15)
  brand       String      @db.VarChar(50)
  model       String      @db.VarChar(50)
  year        Int?
  color       String?     @db.VarChar(30)
  vehicleType VehicleType @default(SEDAN)
  clientId    String
  tenantId    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  tenant Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  client Client          @relation(fields: [clientId], references: [id], onDelete: Cascade)
  orders ServiceOrder[]

  @@unique([tenantId, plate])
  @@index([tenantId])
  @@index([plate])
  @@index([clientId])
  @@map("vehicles")
}

model ServiceType {
  id          String   @id @default(cuid())
  name        String   @db.VarChar(100)
  description String?  @db.Text
  price       Decimal  @db.Decimal(10, 2)
  duration    Int
  isActive    Boolean  @default(true)
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@unique([tenantId, name])
  @@index([tenantId])
  @@index([tenantId, isActive])
  @@map("service_types")
}

model ServiceOrder {
  id          String      @id @default(cuid())
  orderNumber String      @db.VarChar(20)
  status      OrderStatus @default(PENDING)
  totalAmount Decimal     @db.Decimal(10, 2)
  notes       String?     @db.Text
  startedAt   DateTime?
  completedAt DateTime?
  tenantId    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  clientId    String
  vehicleId   String
  createdById String

  tenant    Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  client    Client    @relation(fields: [clientId], references: [id])
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id])
  createdBy User      @relation("CreatedByUser", fields: [createdById], references: [id])
  items     OrderItem[]

  @@unique([tenantId, orderNumber])
  @@index([tenantId])
  @@index([status])
  @@index([createdAt])
  @@index([clientId])
  @@index([vehicleId])
  @@index([createdById])
  @@index([orderNumber])
  @@index([tenantId, status])
  @@index([tenantId, createdAt])
  @@map("service_orders")
}

model OrderItem {
  id            String  @id @default(cuid())
  quantity      Int     @default(1)
  unitPrice     Decimal @db.Decimal(10, 2)
  subtotal      Decimal @db.Decimal(10, 2)

  orderId       String
  serviceTypeId String

  order       ServiceOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  serviceType ServiceType  @relation(fields: [serviceTypeId], references: [id])

  @@index([orderId])
  @@index([serviceTypeId])
  @@map("order_items")
}

// =============================================
// FACTURACION Y PAGOS
// =============================================

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique @db.VarChar(30)
  tenantId      String
  planId        String?
  amount        Decimal       @db.Decimal(10, 2)
  tax           Decimal       @default(0) @db.Decimal(10, 2)
  totalAmount   Decimal       @db.Decimal(10, 2)
  status        InvoiceStatus @default(PENDING)
  description   String?       @db.Text
  periodStart   DateTime
  periodEnd     DateTime
  dueDate       DateTime
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  tenant   Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  plan     Plan?         @relation(fields: [planId], references: [id])
  items    InvoiceItem[]
  payments Payment[]
  scheduledPlanChanges ScheduledPlanChange[]
  reminders PaymentReminder[]

  @@index([tenantId])
  @@index([status])
  @@index([dueDate])
  @@index([tenantId, status])
  @@map("invoices")
}

model InvoiceItem {
  id          String  @id @default(cuid())
  invoiceId   String
  description String  @db.VarChar(255)
  quantity    Int     @default(1)
  unitPrice   Decimal @db.Decimal(10, 2)
  subtotal    Decimal @db.Decimal(10, 2)

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("invoice_items")
}

model Payment {
  id                String        @id @default(cuid())
  invoiceId         String
  tenantId          String
  amount            Decimal       @db.Decimal(10, 2)
  method            PaymentMethod
  status            PaymentStatus @default(PENDING)
  payuOrderId       String?       @db.VarChar(255)
  payuTransactionId String?       @db.VarChar(255)
  payuReferenceCode String?       @unique @db.VarChar(255)
  payuResponseCode  String?       @db.VarChar(100)
  pseBank           String?       @db.VarChar(255)
  pseBankUrl        String?       @db.Text
  metadata          Json?
  paidAt            DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([invoiceId])
  @@index([status])
  @@map("payments")
}

model ScheduledPlanChange {
  id            String           @id @default(cuid())
  tenantId      String
  fromPlanId    String?
  toPlanId      String
  invoiceId     String?
  effectiveDate DateTime
  status        PlanChangeStatus @default(SCHEDULED)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  fromPlan  Plan?    @relation("FromPlan", fields: [fromPlanId], references: [id])
  toPlan    Plan     @relation("ToPlan", fields: [toPlanId], references: [id])
  invoice   Invoice? @relation(fields: [invoiceId], references: [id])

  @@index([tenantId])
  @@index([status])
  @@index([effectiveDate])
  @@index([status, effectiveDate])
  @@map("scheduled_plan_changes")
}

model PaymentReminder {
  id           String       @id @default(cuid())
  tenantId     String
  invoiceId    String?
  type         ReminderType
  sentAt       DateTime?
  scheduledFor DateTime
  createdAt    DateTime     @default(now())

  tenant  Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  invoice Invoice? @relation(fields: [invoiceId], references: [id])

  @@index([tenantId])
  @@index([invoiceId])
  @@index([scheduledFor])
  @@index([sentAt, scheduledFor])
  @@map("payment_reminders")
}
